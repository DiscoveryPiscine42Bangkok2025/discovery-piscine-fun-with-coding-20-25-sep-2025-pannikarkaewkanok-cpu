<script>
$(function(){
  $("#b30").click(()=>$("#c30").text("updated!"));
  $("#c31").click(()=>$("#c31").toggleClass("hi"));
  $("#b32").click(()=>$("#c32").append("<div>item</div>"));
  $("#b33").click(()=>$("#c33").fadeToggle());
});
</script>
